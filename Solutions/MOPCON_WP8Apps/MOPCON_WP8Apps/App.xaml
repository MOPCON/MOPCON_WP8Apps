<Application 
    x:Class="MOPCON_WP8Apps.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--Application Resources-->
    <Application.Resources>
        <SolidColorBrush x:Key="FontColor">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="FontColor1">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="FontColor2">#FF0033CC</SolidColorBrush>
        <SolidColorBrush x:Key="FontColor3">#FF15FBDC</SolidColorBrush>
        <sys:Double x:Key="DataItemBackgroundOpacity">0.6</sys:Double>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>